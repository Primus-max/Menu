<Window x:Class="Menu.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Menu"
        xmlns:data="clr-namespace:Menu.ViewModels"
        mc:Ignorable="d"

        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}"

        Title="{Binding Title}"
        Height="600"
        Width="1000"
        Loaded="Window_Loaded"
        SizeChanged="ResizeMainWin_Resize"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Icon="/TitleIco.ico"
        >
    <Window.DataContext>
        <data:MainViewModel/>
    </Window.DataContext>

    <Window.Resources>
        <Style x:Key="TextStyleInfo">
            <Setter Property="TextBlock.Width" Value="Auto" />
            <Setter Property="TextBlock.Padding" Value="0" />
            <Setter Property="TextBlock.FontSize" Value="18" />
            <Setter Property="TextBlock.HorizontalAlignment" Value="Center" />
            <Setter Property="TextBlock.Foreground" Value="#e2e4e400" />
        </Style>
        <Style x:Key="MenuText">
            <Setter Property="TextBlock.FontSize" Value="16"/>
        </Style>
    </Window.Resources>


    <Grid  x:Name="RenderGrid">
        <Border BorderBrush="#e2e4e400"
                BorderThickness="4"
                Padding="10"
                Background="#FF000AA2" HorizontalAlignment="Stretch">
            <StackPanel>
                <StackPanel Margin="0 0 0 10"
                            VerticalAlignment="Stretch"
                            HorizontalAlignment="Center"
                            Orientation="Horizontal">
                    <TextBlock  Text="МЕНЮ НА СЕГОДНЯ"
                               Foreground="#e2e4e400"
                               FontSize="24"/>
                    <DatePicker x:Name="MenuDate"
                                Margin="10 0 0 0"
                                MinWidth="120"
                                FontSize="24"
                                Foreground="#e2e4e400"
                                BorderThickness="0"
                                BorderBrush="Transparent"
                                FirstDayOfWeek="Monday"
                                VerticalContentAlignment="Center"
                                Padding="0,0,0,0"
                                Language="ru-RU"/>
                </StackPanel>

                <Grid x:Name="GridParent"
                      ShowGridLines="True"
                      Height="450">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="123*" />
                        <ColumnDefinition Width="345*" />
                        <ColumnDefinition Width="155*" />
                        <ColumnDefinition Width="155*" />
                        <ColumnDefinition Width="155*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="31" />
                        <RowDefinition Height="128*" />
                        <RowDefinition Height="128*" />
                        <RowDefinition Height="128*" />
                        <RowDefinition Height="18" />
                    </Grid.RowDefinitions>

                    <TextBlock x:Name="ColumnHeader1"
                               Text="Прием пищи"
                               Style="{StaticResource TextStyleInfo}"
                               Margin="0,3,0,0"  />
                    <TextBlock x:Name="ColumnHeader2"
                               Grid.Column="1"
                               Text="Блюдо"
                               Style="{StaticResource TextStyleInfo}"
                               Margin="0,3,0,0" />
                    <TextBlock x:Name="ColumnHeader3"
                               Grid.Column="2"
                               Text="Выход блюд"
                               Style="{StaticResource TextStyleInfo}"
                               Margin="0,3,0,0"/>
                    <TextBlock x:Name="ColumnHeader4"
                               Grid.Column="3"
                               Text="Масса порций"
                               Style="{StaticResource TextStyleInfo}"
                               Margin="0,3,0,0"/>
                    <TextBlock x:Name="ColumnHeader5"
                               Grid.Column="4"
                               Text="Повар"
                               Style="{StaticResource TextStyleInfo}"
                               Margin="0,3,0,0" />

                    <TextBlock x:Name="Breakfast"
                               Grid.Row="1"
                               Grid.Column="0"
                               Text="ЗАВТРАК"
                               Style="{StaticResource TextStyleInfo}"
                               FontSize="22"
                               Width="Auto"
                               VerticalAlignment="Center" />

                    <TextBlock x:Name="Dinner"
                               Text="ОБЕД"
                               Style="{StaticResource TextStyleInfo}"
                               FontSize="22"
                               Width="Auto"
                               Grid.Row="2"
                               Grid.Column="0"
                               VerticalAlignment="Center"/>

                    <TextBlock  x:Name="Supper"
                               Text="УЖИН"
                               Style="{StaticResource TextStyleInfo}"
                               FontSize="22"
                               Width="Auto"
                               Grid.Row="3"
                               Grid.Column="0"
                               VerticalAlignment="Center" />

                    <!--Повар завтрак-->
                    <Grid Grid.Row="1" Grid.Column="4">
                        <Border Padding="5" HorizontalAlignment="Center" VerticalAlignment="Center" >
                            <TextBox x:Name="CookedBreakfast"
                                     MinWidth="50"
                                     Style="{StaticResource MenuText}"
                                     TextWrapping="Wrap"
                                     Padding="5 0 5 10"
                                     BorderThickness="0"
                                     AcceptsReturn="True"
                                     Background="{x:Null}"
                                     Foreground="#FFFFDE00"
                                     SelectionBrush="#FFCA2020"
                                     CaretBrush="#FFFFDE00"
                                     />
                        </Border>
                    </Grid>

                    <!--Повар обед-->
                    <Grid Grid.Row="2" Grid.Column="4">
